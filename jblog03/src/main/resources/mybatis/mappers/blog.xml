<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="blog">
	<select id="getbloginfo" parameterType="String" resultType="blogvo">
		<![CDATA[
			select title,logo from blog where id=#{id}
		]]>
	</select>
	
	<select id="getpostinfo" parameterType="String" resultType="postvo">
		<![CDATA[
			select a.title, a.contents, a.reg_date 
			from post a join category b on a.category_no = b.no 
			where b.blog_id=#{id} order by a.no desc limit 0,5
		]]>
	</select>

	<select id="getcateinfo" parameterType="String" resultType="categoryvo">
		<![CDATA[
			select * from category where blog_id=#{id};
		]]>
	</select>

	<insert id="write" parameterType="postvo">
		<![CDATA[
			insert into post values (null, #{title}, #{contents} , now() , #{category_no})
		]]>
	</insert>
</mapper>